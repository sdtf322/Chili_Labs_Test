<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingStart="26dp"
    android:paddingEnd="12dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tlCollection"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_corners"
        android:paddingStart="25dp"
        android:paddingTop="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/poppinssemibold"
            android:inputType="text"
            android:hint="@string/search_input"
            android:maxLength="40"
            android:paddingTop="9dp"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="127dp"
        android:layout_height="62dp"
        android:background="@drawable/rounded_corners_button"
        app:layout_constraintEnd_toEndOf="@+id/tlCollection"
        app:layout_constraintTop_toTopOf="@+id/tlCollection"
        android:text="@string/search_button"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBenchmark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlCollection" />

</androidx.constraintlayout.widget.ConstraintLayout>